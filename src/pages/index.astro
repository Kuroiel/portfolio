---
import '../styles/global.css';


const projects = [
  {
    title: "Doro Clicker",
    role: "Test Automation Showcase",
    desc: "A clicker game app featuring a robust CI/CD pipeline. Achieved 100% test coverage on critical flows using Playwright (E2E) and Jest (Unit).",
    tags: ["Playwright", "Jest", "CI/CD", "GitHub Actions"],
    link: "https://kuroiel.github.io/Doro-clicker/",
    code: "https://github.com/Kuroiel/Doro-clicker",
    color: "from-blue-500 to-cyan-400",
    image: "/doro.PNG" 
  },
  {
    title: "UmaMusume Race Planner",
    role: "Community tool",
    desc: "Live community tool for race planning. Features real-user traffic monitoring via Google Analytics and a work in progress automation test suite.",
    tags: ["Live Production", "Manual Testing", "Google Analytics", "React"],
    link: "https://kuroiel.github.io/UmaMusumeRacePlanner/",
    code: "https://github.com/Kuroiel/UmaMusumeRacePlanner",
    color: "from-purple-500 to-pink-500",
    image: "/uma.PNG"
  },
  {
    title: "RNG Tracker",
    role: "Backend & Python Experiment",
    desc: "A statistical tool connected to a database. I am using this to improve my understanding of SQL queries and backend data validation. Additional features and tests to come.",
    tags: ["SQL/Supabase", "Data Validation", "API Testing", "WIP"],
    link: "https://kuroiel.github.io/RNG-Track/",
    code: "https://github.com/Kuroiel/RNG-Track", 
    color: "from-emerald-500 to-teal-400",
    image: "/rng.PNG" 
  }
];

const skills = [
  "Test Strategy/Planning", "Manual Testing", "Jira / Bug Tracking", "Process Improvement", "TestRail", 
  "Playwright", "SQL", "CI/CD Concepts", "Postman", "Python" 
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Felix Lee | QA Engineer</title>
    <meta name="description" content="Software QA Engineer with 7+ years of experience." />
  </head>
  <body class="bg-slate-950 text-slate-200 font-sans selection:bg-blue-500 selection:text-white">
    
    <main class="max-w-6xl mx-auto p-4 md:p-8">
      

      <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-4">
        <div class="md:col-span-3 bg-slate-900 border border-slate-800 rounded-2xl p-8 flex flex-col justify-center relative overflow-hidden group">
          <div class="absolute inset-0 bg-gradient-to-r from-blue-900/20 to-purple-900/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <h1 class="text-4xl md:text-6xl font-bold text-white mb-4 relative z-10">
            Felix Lee
          </h1>
          <h2 class="text-xl md:text-2xl text-blue-400 font-medium mb-6 relative z-10">
            Software QA Engineer
          </h2>
          <p class="text-slate-400 max-w-2xl text-lg relative z-10 leading-relaxed">
            QA Professional with <span class="text-slate-200 font-semibold">7+ years of experience</span> ensuring software stability.
            <br/><br/>
            Background in Science (Chemistry). Expert in manual testing methodologies, now expanding into <span class="text-blue-300">Test Automation</span> and <span class="text-blue-300">CI/CD workflows</span>.
          </p>
        </div>


        <div class="md:col-span-1 bg-slate-900 border border-slate-800 rounded-2xl p-6 flex flex-col justify-between gap-4">
          <div>
            <h3 class="text-slate-500 uppercase text-xs font-bold tracking-wider mb-4">Connect</h3>
            <div class="flex flex-col gap-3">
              <a href="https://www.linkedin.com/in/felixjlee/" target="_blank" class="flex items-center gap-3 text-white hover:text-blue-400 transition-colors bg-slate-800 p-3 rounded-lg border border-slate-700 hover:border-blue-500/50">
                <span>LinkedIn</span>
              </a>
              <a href="https://github.com/Kuroiel" target="_blank" class="flex items-center gap-3 text-white hover:text-purple-400 transition-colors bg-slate-800 p-3 rounded-lg border border-slate-700 hover:border-purple-500/50">
                <span>GitHub</span>
              </a>

              <button id="emailBtn" class="flex items-center gap-3 text-white hover:text-green-400 transition-colors bg-slate-800 p-3 rounded-lg border border-slate-700 hover:border-green-500/50 text-left w-full group">
                <span id="emailText">Copy Email</span>
              </button>
            </div>
          </div>
          <div class="text-xs text-slate-500">
            Based in Cupertino, CA
          </div>
        </div>
      </div>


      <div class="bg-slate-900 border border-slate-800 rounded-2xl p-6 mb-4">
        <h3 class="text-slate-500 uppercase text-xs font-bold tracking-wider mb-4">Technical Skills & Tools</h3>
        <div class="flex flex-wrap gap-2">
          {skills.map((skill) => (
            <span class="px-3 py-1 bg-slate-800 text-blue-300 text-sm rounded-md border border-slate-700">
              {skill}
            </span>
          ))}
        </div>
      </div>


      <h3 class="text-white text-xl font-bold mb-4 mt-8 px-2">Current Projects</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
        {projects.map((project) => (
          <div class="bg-slate-900 border border-slate-800 rounded-2xl p-6 flex flex-col h-full hover:border-slate-600 transition-colors group">
            
            <!-- IMAGE LOGIC -->
            {project.image ? (
              <div class="h-48 w-full mb-6 overflow-hidden rounded-lg border border-slate-800 relative group-hover:border-slate-600 transition-colors">
                 <img 
                   src={import.meta.env.BASE_URL + project.image} 
                   alt={project.title} 
                   class="w-full h-full object-cover opacity-50 grayscale group-hover:opacity-100 group-hover:grayscale-0 transition-all duration-500"
                 />
              </div>
            ) : (
              <div class={`h-2 w-12 rounded-full mb-4 bg-gradient-to-r ${project.color}`}></div>
            )}
            
            <h4 class="text-xl font-bold text-white mb-1">{project.title}</h4>
            <p class="text-xs font-mono text-blue-400 mb-4 uppercase tracking-wide">{project.role}</p>
            
            <p class="text-slate-400 text-sm mb-6 flex-grow leading-relaxed">
              {project.desc}
            </p>


            <div class="flex flex-wrap gap-2 mb-6">
              {project.tags.map((tag) => (
                <span class="text-xs text-slate-500 border border-slate-800 px-2 py-1 rounded bg-slate-950">
                  {tag}
                </span>
              ))}
            </div>


            <div class="flex gap-3 mt-auto pt-4 border-t border-slate-800">
              <a href={project.link} target="_blank" class="text-sm font-semibold text-white hover:underline decoration-blue-500 underline-offset-4">
                View Live
              </a>
              {project.code && (
                <a href={project.code} target="_blank" class="text-sm text-slate-500 hover:text-white transition-colors">
                  Source Code
                </a>
              )}
            </div>
          </div>
        ))}
      </div>


      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-12 bg-slate-900 border border-slate-800 rounded-2xl p-8">
        <div>
          <h3 class="text-2xl font-bold text-white mb-4">Let's Connect</h3>
          <p class="text-slate-400 mb-6 leading-relaxed">
            I am currently open to new opportunities in QA Engineering. 
            Feel free to reach out via LinkedIn or this form.
          </p>
          <div class="text-sm text-slate-500">
            <p>Prefer direct email?</p>
            <p class="text-slate-400 mt-1">Click the "Copy Email" button in the top card.</p>
          </div>
        </div>


        <form action="https://formspree.io/f/mrbvjlkd" method="POST" class="space-y-4">
		<input type="text" name="_gotcha" style="display:none" />
          <div>
            <label for="email" class="block text-xs font-bold text-slate-500 uppercase mb-2">Your Email</label>
            <input type="email" name="email" required 
              class="w-full bg-slate-950 border border-slate-800 rounded-lg p-3 text-white focus:outline-none focus:border-blue-500 transition-colors"
              placeholder="recruiter@company.com"
            />
          </div>
          <div>
            <label for="message" class="block text-xs font-bold text-slate-500 uppercase mb-2">Message</label>
            <textarea name="message" rows="4" required
              class="w-full bg-slate-950 border border-slate-800 rounded-lg p-3 text-white focus:outline-none focus:border-blue-500 transition-colors"
              placeholder="Hi Felix, I'd like to discuss a QA position..."
            ></textarea>
          </div>
          <button type="submit" class="w-full bg-blue-600 hover:bg-blue-500 text-white font-bold py-3 px-8 rounded-lg transition-colors">
            Send Message
          </button>
        </form>
      </div>

      <footer class="text-center text-slate-600 text-sm py-12">
        <p>&copy; {new Date().getFullYear()} Felix Lee. Built with Astro & Tailwind.</p>
      </footer>

    </main>


    <script>
      // Obfuscated email construction to prevent simple scraping
      const user = "felixjlee69";
      const domain = "gmail.com";
      const email = `${user}@${domain}`;
      
      const btn = document.getElementById("emailBtn");
      const text = document.getElementById("emailText");

      if (btn && text) {
        btn.addEventListener("click", () => {
          navigator.clipboard.writeText(email);
          const originalText = text.innerText;
          text.innerText = "Copied to Clipboard!";
          text.classList.add("text-green-400");
          
          setTimeout(() => {
            text.innerText = originalText;
            text.classList.remove("text-green-400");
          }, 2000);
        });
      }
    </script>
  </body>
</html>